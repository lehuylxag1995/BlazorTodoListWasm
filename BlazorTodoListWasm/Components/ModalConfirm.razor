<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);"
     aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close" @onclick="ModalCancel">&times;</button>
            </div>
            <div class="modal-body">
                <p>@Text</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="ModalOpen">OK</button>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public EventCallback<bool> ModalEvent { get; set; }

    private async Task ModalCancel()
    {
        await ModalEvent.InvokeAsync(false);
    }

    private async Task ModalOpen()
    {
        await ModalEvent.InvokeAsync(true);
    }
}
